<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.17pretest" parent="Base.Theme.17pretest" />

    <style name="Base.Theme.17pretest" parent="Base.Theme.MaterialThemeBuilder">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime_400</item>
        <item name="colorPrimaryVariant">@color/lime_200</item>
        <item name="colorPrimaryDark">@color/lime_600</item>
        <item name="colorOnPrimary">@color/silver_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold_300</item>
        <item name="colorSecondaryVariant">@color/gold_300</item>
        <item name="colorOnSecondary">@color/silver_700</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/silver_200</item>
        <item name="colorOnSurface">@color/silver_700</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/silver_300</item>

        <item name="colorError">@color/red_500</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">
            ?android:attr/colorBackground
        </item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?attr/colorControlHighlight
        </item>
    </style>
</resources>